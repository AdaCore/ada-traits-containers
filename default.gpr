project Default is
   for Main use ("perf.adb");
   for Object_Dir use "obj";
   for Languages use ("Ada", "C++");
   package Naming is
      for Implementation_Suffix ("C++") use ".cc";
   end Naming;
   package Compiler is
      for Switches ("Ada") use ("-O2", "-gnat12", "-gnatp", "-gnatn", "-gnatwu");
      for Switches ("C++") use ("-O2", "-finline");
   end Compiler;
end Default;
