with "../../src/conts";
with "../../src/shared";
with "gnatcoll";

project Default is
   for Source_Dirs use (".", "generated");
   for Object_Dir use "obj";
   for Languages use ("Ada", "C++", "Python");
   for Main use ("main.adb");

   package Compiler extends Shared.Compiler is
      for Switches ("s-memory.adb") use ("-gnatg")
         & Compiler'Switches ("Ada");
      for Switches ("C++") use Shared.Boost_Include
         & Compiler'Switches ("C++");
   end Compiler;
   package Builder extends Shared.Builder is
      for Global_Configuration_Pragmas use "gnat.adc";
   end Builder;
   package Naming renames Shared.Naming;
   package Binder renames Shared.Binder;
   package Linker renames Shared.Linker;
end Default;
